{
	// Place your snippets for ftl here. Each snippet is defined under a snippet name and has a prefix, body and
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"<tagName>{new line}</tagName>": {
		"prefix": "tt",
		"body": "<${1:div}>\n\t$0\n</${1}>",
		"description": "create a pair of multi line tags"
	},
	"<section></section>": {
		"prefix": "section",
		"body": "<section$1>\n\t$0\n</section>"
	},
	"<img></img>": {
		"prefix": "img",
		"body": "<img src=\"$1\">"
	},
	"<a></a>": {
		"prefix": "a",
		"body": "<a href=\"$1\">$0</a>"
	},
	"<script src></script>": {
		"prefix": "script",
		"body": "<script src=\"$1\" charset=\"utf-8\"></script>"
	},
	"<input />": {
		"prefix": "input",
		"body": "<input type=\"$1\"/>"
	},
	"class=\"\"": {
		"prefix": "class",
		"body": "class=\"$1\"$0"
	},
	"id=\"\"": {
		"prefix": "id",
		"body": "id=\"$1\"$0"
	},
	"style=\"display:none;\"": {
		"prefix": "hidden",
		"body": "style=\"display:none;\""
	},
	"template": {
		"prefix": "template",
		"body": "<template view-name=\"$0\">\n</template>"
	},
	"li": {
		"prefix": "li",
		"body": "<li class=\"$0\"></li>"
	},
	"div": {
		"prefix": "div",
		"body": "<div class=\"$0\"></div>"
	},
	"button": {
		"prefix": "button",
		"body": "<button class=\"$0\"></button>"
	},
	"<@{name} />": {
		"prefix": "@",
		"body": "<@${name} />"
	},
	"<#{tag}><#/{tag}>": {
		"prefix": "#",
		"body": "<#${1:macro} $2>$0</#$1>"
	},
	"<#macro {name}><#/macro>": {
		"prefix": "macro",
		"body": "<#macro $1>$0</#macro>"
	},
	"<@spring.message code='{msg}'/>": {
		"prefix": "msg",
		"body": "<@spring.message code='${1:msg}'/>"
	}
}